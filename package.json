{
  "name": "ziltag-elements",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "storybook": "start-storybook -p 9001",
    "storybook:build": "build-storybook",
    "clean": "rm -rf dist",
    "build": "npm run clean && babel --presets='es2015,stage-2,react' -d dist --ignore '**/story.js' components && npm run copy_css",
    "copy_css": "rsync -av --include='*.css' --include='*/' --exclude='*' components/ dist",
    "release": "npm run build && git add dist && git ci -m 'build' && git push",
    "deploy": "GIT_DEPLOY_DIR=storybook-static GIT_DEPLOY_BRANCH=gh-pages GIT_DEPLOY_REPO=git@github.com:ziltag/elements.git bin/deploy",
    "test": "xo"
  },
  "author": "Ziltag Inc.",
  "license": "ISC",
  "devDependencies": {
    "@kadira/storybook": "^2.14.0",
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-2": "^6.13.0",
    "xo": "^0.16.0"
  },
  "dependencies": {
    "react-icons": "^2.2.1",
    "react": "^15.3.1"
  },
  "xo": {
    "semicolon": false,
    "extends": "xo-react",
    "space": true,
    "envs": ["browser", "node"],
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
  }
}
